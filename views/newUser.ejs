<% layout('/layout/page') -%>
<div class="panel">
    <div class="panel-heading bg-white section-name"><div><h5>Новый пользователь</h5></div>   </div>

    <form id="newUserForm" class="form-horizontal m-b-none clearfix m-t-small" method="get"  novalidate="">


        <div class="form-group">
            <label class="col-sm-3 control-label">ID пользователя</label>
            <div class="col-sm-6">
              <input type="text" name="user_id"  class="form-control" readonly value="<%=user_id%>" >

</div>

        </div>


        <div class="form-group">
            <label class="col-sm-3 control-label">Имя пользователя</label>
            <div class="col-sm-6">
                <input type="text" name="user_name" class="form-control"  >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Ник пользователя</label>
            <div class="col-sm-6">
                <input type="text" name="user_custom" class="form-control"  >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Электронная почта</label>
            <div class="col-sm-6">
                <input type="text" name="email" class="form-control parsley-error"  placeholder="email@example.ru" >
                <span class="help-block" style="display: none;">Email введен некорректно</span>
            </div>
        </div>
        <div class="form-group m-b-none">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-6">
                <button type="submit"  class="btn btn-success">Сохранить</button>
            </div>
        </div>

    </form>
</div>
<script>
//$("[name='user_id']").val('_' + Math.random().toString(36).substr(2, 9));
$("[name='email']").bind('input', function() {
    isEmail($(this));
});
    $("#newUserForm").on('submit', function (){
        createUser( $(this));;
        return false;});
    </script>