<% layout('/layout/page') -%>
<div class="panel">
    <div class="panel-heading bg-white section-name"><div><h5>Пользователи</h5></div>   </div>
</div>
      <a href="/newUser" class="btn btn-white m-b btn-sm">Создать пользователя</a>
<div class="loading-container"><img src="/images/load.gif"></div>
<div id="usersContent" class="usersContent" style="display: none">
    <table id="usersTable">
             <thead >
        <tr>
            <th data-field="enabled">Статус</th>
            <th data-field="user_id" data-formatter="LinkFormatter">ID пользователя</th>
            <th data-field="register_date">Дата регистрации</th>
            <th data-field="user_name">Имя пользователя</th>
            <th data-field="user_custom">Ник пользователя</th>
            <th data-field="email">Электронная почта</th>

            <th data-field="balance">Баланс, Gold</th>
            <th data-field="wallet_amount">Xsolla баланс</th>
            <!--<th data-field="wallet_currency">wallet_currency</th>-->

        </tr>
        </thead>
    </table>
    <div class="text-center">
        <button id="button" class="btn btn-white btn-load-more">Показать еще</button>
    </div>

</div>


<script>
    loadTable($("#usersTable"));
</script>
